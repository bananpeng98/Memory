{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "consistent-return": 2,
    "indent"           : [1, 2],
    "no-else-return"   : 1,
    "semi"             : [1, "always"],
    "space-unary-ops"  : 2,
    "no-console": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "amd": true
  },
  "plugins": [
    "react"
  ]
}
